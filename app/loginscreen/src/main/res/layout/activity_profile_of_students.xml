<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileOfStudents"
    android:background="@drawable/studentimagennn"
    >

    <!-- Botón Datos Estudiante -->

    <!-- Botón Datos Diarios -->
    <Button
        android:id="@+id/btnDatosEstudiante"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/gray"
        android:text="Datos Estudiante"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <!-- Contenedor Datos Estudiante -->
    <Button
        android:id="@+id/btnDatosDiarios"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/gray"
        android:text="Información diaria."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <FrameLayout
        android:id="@+id/contenedorDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STUDENT DATA"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/NomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE:" />

            <TextView
                android:id="@+id/numTextcedu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUMERO DE CEDULA:" />

            <TextView
                android:id="@+id/numTeltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUMERO TELEFONICO:" />

            <TextView
                android:id="@+id/seccText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SECCIÓN:" />

            <TextView
                android:id="@+id/gradoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GRADO:" />
        </LinearLayout>
    </FrameLayout>

    <!-- Contenedor Datos Diarios con NUEVA UBICACIÓN -->
    <FrameLayout
        android:id="@+id/contenedorDatosDiarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.911">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvProfesoresAusentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profesores ausentes:"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvComunicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comunicación profesor estudiantes:"
                android:textSize="16sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
